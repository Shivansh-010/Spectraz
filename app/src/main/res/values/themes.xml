<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Spectraz" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey_primary</item> <!-- Very dark grey, almost black -->
        <item name="colorOnPrimary">@color/white</item> <!-- White text/icons on primary -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_grey_secondary</item> <!-- A medium dark grey for accents -->
        <item name="colorOnSecondary">@color/white</item> <!-- White text/icons on secondary -->

        <!-- Tertiary accent color. -->
        <item name="colorTertiary">@color/light_grey_tertiary</item> <!-- A slightly lighter grey for subtle accents -->
        <item name="colorOnTertiary">@color/black</item> <!-- Black text/icons on tertiary (adjust if needed for contrast) -->

        <!-- Error color. -->
        <item name="colorError">@color/dark_red_error</item> <!-- A muted red for errors -->
        <item name="colorOnError">@color/black</item> <!-- Black text on error color -->

        <!-- Background and Surface colors -->
        <item name="android:colorBackground">@color/dark_background</item> <!-- Overall window background -->
        <item name="colorSurface">@color/dark_surface</item> <!-- Card, Sheet, Menu backgrounds -->
        <item name="colorOnBackground">@color/white</item> <!-- Text/icons on background -->
        <item name="colorOnSurface">@color/white</item> <!-- Text/icons on surface -->
        <item name="colorSurfaceVariant">@color/dark_surface_variant</item> <!-- Slightly different surface (e.g., outlines) -->
        <item name="colorOnSurfaceVariant">@color/light_grey_text</item> <!-- Text/icons on surface variant -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <!-- Optional: Customize navigation bar color -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <!-- Optional: Make status bar icons light -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Optional: Make navigation bar icons light -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

    </style>

</resources>